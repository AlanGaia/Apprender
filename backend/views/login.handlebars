<div class="container center-align">
  <div class="row">
    <div class="col s12 l4 offset-l4">
      <form action="/user/signin" method="POST">
        <h3>Iniciar session</h3>
        {{#if message}}
        <div id="message" class="{{color}} lighten-4 alertmsg animate__animated animate__backInDown mb-5">
          {{#if user.hacker}}
          <span class=" glitch" data-text="{{message}}" id="msg">{{message}}</span>
          {{else}}
          <span class="{{color}}-text" id="msg">{{message}}</span>
        {{/if}}
        </div>
        {{/if}}
        <div class="input-field col s12">
          <i class="material-icons prefix">email</i>
          {{#if user.email}}
          <input id="icon_email" name="email" type="email" class="validate" value="{{user.email}}">
          {{else}}
          <input id="icon_email" name="email" type="email" class="validate">
          {{/if}}
          <label for="icon_email">Tu Email</label>
        </div>
        <div class="input-field col s12">
          <i class="material-icons prefix">https</i>
          <input id="icon_password" name="password" type="password" class="validate">
          <label for="icon_password">Tu contraseña</label>
        </div>

        <a href="/"
					class="blue-grey hoverable waves-effect waves-light btn-large modal-trigger">
					Atras
				</a>
        <button type="submit" class="green hoverable accent-4 waves-effect waves-light btn-large">
          Iniciar Sesión
        </button>
      </form>

    </div>
  </div>
</div>

<script>
  setTimeout(() => {
    document.getElementById('message').classList.add('animate__fadeOut')
  },6500)
</script>